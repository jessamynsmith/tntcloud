        <td>
        <form action="/people-delete/delete-person" method="post">
          <button class="button alert" name="{{ key }}">
            Delete Person
          </button>
        </form>
        </td>
        <!-------------------------------------------------------->
        <td><a href="/core-warranty/people-list" class="button secondary">Cancel</a></td>
      </tr>
    </tbody>
  </table>
