
<!-- Title/Intro ------------------------------------------------------------>
<div class="section-intro">
  <h1>People</h1>
  <h3>Turned In By & Received By</h3>
  <p>These are the names available in the tracker select lists "Turned In By" and "Received By"</p>
</div>

<p><a class="button hollow" href="/core-warranty/people-add">Add Person</a></p>

<!-- Primary Content -------------------------------------------------------->
<table class="data-table stack">
  <thead>
    <tr>
      <th class="col2">Person Name</th>
      <th class="col2">Delete Person</th>
    </tr>
  </thead>
  <!-- nodejs generated list used by people-list.js to get original list ------>
  <tbody id="data-list-pre-sorted" class="list">
    {{#each peopleData }}
      <tr class="data-row" data-sort="{{DateTimeStampServer}}" id="{{@key}}">
        <td>{{ PersonName }}</td>
        <td><a class="button list-record" href="people-delete/?KEY={{@key}}">Delete Person</a></td>
      </tr>
    {{/each}}
  <!-- sorted list output by people-list.js appended to this tbody tag -------->
  <tbody id="data-list-sorted" class="list">
  </tbody>
</table>

<!-- import sort code after list markup has been generated -------------------->
<script src="/javascripts/sort/data-list-sort.js"></script>
