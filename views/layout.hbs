<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <!-- Jquery required for Foundation, and LISTJS -->
  <script src="/javascripts/jquery/3.2.1/jquery.min.js"></script>
  <!-- Foundation - Compressed CSS -->
  <link rel="stylesheet" href="/foundation/6.3.1/foundation.min.css" />
  <!-- Foundation - Compressed JavaScript -->
  <script src="/foundation/6.3.1/foundation.min.js"></script>
  <!-- ListJS -->
  <script src="/javascripts/listjs/1.5.0/list.min.js"></script>
  <!-- CSS Custom -->
  <link rel="stylesheet" href="/stylesheets/styles.css" />
  <!-- Firebase -->
  <script src="/javascripts/firebase/4.1.3/firebase.js"></script>
  <script src="/javascripts/firebase/firebase-conn.js"></script>
  <!-- Moment JS -->
  <script src="/javascripts/moment/moment.min.js"></script>
  <!-- Cookie -->
  <script src="/javascripts/cookie/js.cookie.min.js"></script>
</head>
<body>
  <!-- HEADER ----------------------------------------------------------------->
  <div class="header">
    <div>TNT Cloud</div>
  </div>

  <!-- All Site Wrap ---------------------------------------------------------->
  <div class="all-site-wrap">

  <!-- Main Nav --------------------------------------------------------------->
  <nav class="main-nav" id="main-Nav">
    <ul class="vertical menu">
      <li><a href="/dispatch">Dispatch</a></li>
      <li><a href="/core-warranty">Core/Warranty</a></li>
      <li><a href="/users">Users</a></li>
    </ul>
    <form action="/logout" method="post">
      <input id="sign-out-button" class="button" type="submit" value="Sign Out" name="logout">
    </form>
  </nav>

  <!-- Page Wrap -------------------------------------------------------------->
  <div class="page-wrap">

  <!-- Nav Template Partial --------------------------------------------------->
  {{> nav }}
  <!-- End Nav Template Partial ----------------------------------------------->

  <!-- Main Wrap -------------------------------------------------------------->
  <div class="main-wrap row small-11 columns">

  <!-- Body Template ---------------------------------------------------------->
  {{{ body }}}
  <!-- End Body Template ------------------------------------------------------>

  </div><!-- Close Main Wrap -------------------------------------------------->

  </div><!-- Close Page Wrap -------------------------------------------------->

  </div><!-- Close All Site Wrap ---------------------------------------------->
</body>
</html>
