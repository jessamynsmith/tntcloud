<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <!-- jQuery required for Foundation JS (added @ bottom), and ListJS -->
  <!-- place jQuery in <head> because ListJS requires it to run,
       and if place list.min.js into footer it breaks
       1) list sort order, and
       2) search bar functionality
  -->
  <script src="/javascripts/jquery/3.2.1/jquery.min.js"></script>
  <!-- Foundation - CSS -->
  <link rel="stylesheet" href="/foundation/6.3.1/foundation.min.css" />
  <!-- Foundation - CSS Support = Motion UI - Insert this within your head tag and after foundation.css -->
  <link rel="stylesheet" href="/foundation/6.3.1/motion-ui.min.css" />
  <!-- ListJS -->
  <script src="/javascripts/listjs/1.5.0/list.min.js"></script>
  <!-- CSS Custom -->
  <link rel="stylesheet" href="/stylesheets/styles.css" />
  <!-- Firebase -->
  <script src="/javascripts/firebase/4.1.3/firebase.js"></script>
  <script src="/javascripts/firebase/firebase-conn.js"></script>
  <!-- Moment JS -->
  <script src="/javascripts/moment/moment.min.js"></script>
  <!-- Cookie -->
  <script src="/javascripts/cookie/js.cookie.min.js"></script>
</head>
<body>
  <!-- HEADER ----------------------------------------------------------------->
  <div class="header">
    <div>TNT Cloud</div>
  </div>

  <!-- All Site Wrap ---------------------------------------------------------->
  <div class="all-site-wrap">

  <!-- Main Nav --------------------------------------------------------------->
  <nav class="main-nav" id="main-Nav">
    <ul class="vertical menu">
      <li><a href="/dispatch/dispatching">Dispatch</a></li>
      <li><a href="/core-warranty">Core/Warranty</a></li>
      <li><a href="/users">Users</a></li>
      <li>{{ displayNameThing }}</li>
      <li>{{ displayNameGotIt }}</li>
    </ul>
    <form action="/logout" method="post">
      <input id="sign-out-button" class="button" type="submit" value="Sign Out" name="logout">
    </form>
  </nav>

  <!-- Page Wrap -------------------------------------------------------------->
  <div class="page-wrap">

  <!-- Nav Template Partial --------------------------------------------------->
  {{> nav }}
  <!-- End Nav Template Partial ----------------------------------------------->

  <!-- Main Wrap -------------------------------------------------------------->
  <div class="main-wrap row small-11 columns">

  <!-- Body Template ---------------------------------------------------------->
  {{{ body }}}
  <!-- End Body Template ------------------------------------------------------>

  </div><!-- Close Main Wrap -------------------------------------------------->

  </div><!-- Close Page Wrap -------------------------------------------------->

  </div><!-- Close All Site Wrap ---------------------------------------------->

  <!-- Foundation - JavaScript -->
  <script src="/foundation/6.3.1/foundation.min.js"></script>
  <script src="/foundation/6.3.1/what-input.js"></script>
  <!-- Foundation - Initialize JS and include Foundation-targeted custom JS -->
  <script src="/foundation/foundation-init-and-custom.js"></script>
</body>
</html>
